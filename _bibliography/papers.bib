	journal = {PLOS ONE},
	author = {Lu, Sizhao and Natarajan, Sathish Kumar and Mott, Justin L. and Kharbanda, Kusum K. and Harrison-Findik, Duygu Dee},
	month = jan,
	year = {2016},
	note = {Publisher: Public Library of Science},
	keywords = {Fatty liver, Chromatin immunoprecipitation, Transcription factors, Phosphorylation, DNA transcription, Luciferase, Small interfering RNAs, STAT signaling},
	pages = {e0147474},
	file = {Full Text PDF:/Users/sizhaolu/Zotero/storage/2EVXTZZ7/Lu et al. - 2016 - Ceramide Induces Human Hepcidin Gene Transcription.pdf:application/pdf;Snapshot:/Users/sizhaolu/Zotero/storage/PC4P68NL/article.html:text/html},
