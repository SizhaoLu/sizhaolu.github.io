	journal = {Cancer Letters},
	author = {Kleczko, Emily K. and Le, Anh T. and Hinz, Trista K. and Nguyen, Teresa T. and Navarro, Andre and Hu, Cheng-Jun and Selman, Ana M. and Clambey, Eric T. and Merrick, Daniel T. and Lu, Sizhao and Weiser-Evans, Mary and Nemenoff, Raphael A. and Heasley, Lynn E.},
